{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=sonicwave8d;Username=postgres;Password=postgres"
  },

  "Jwt": {
    "Key": "SonicWave8D_Development_SecretKey_MinLength32Chars!",
    "Issuer": "SonicWave8D.API",
    "Audience": "SonicWave8D.Client",
    "ExpireMinutes": 120,
    "RefreshExpireDays": 7
  },

  "FileStorage": {
    "BasePath": "./uploads",
    "MaxFileSizeMB": 100,
    "AllowedExtensions": [".mp3", ".wav", ".flac", ".ogg", ".m4a", ".aac"]
  },

  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5000",
      "https://localhost:5001",
      "http://localhost:7000",
      "https://localhost:7001",
      "http://127.0.0.1:5000",
      "http://127.0.0.1:7000"
    ]
  }
}
